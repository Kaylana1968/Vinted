{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		table,
		tr,
		td,
		th {
			border-collapse: collapse;
			border: 1px solid black;
			padding: 4px 8px;
			text-align: center;
		}
		tr {
			height: 50px;
		}
		th {
			width: 400px;
		}
		img {
			height: 50px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Receipts of
			{{ user.name }}</h1>

		<table>
			<tr>
				<th>image</th>
				<th>title</th>
				<th>price</th>
			</tr>

			{% for article in sold_article %}

				<tr>
					<td>
						<img src={{ asset(article.picture) }} onerror="this.onerror=null;this.src='{{ article.picture }}';" alt={{article.title}}>
					</td>
					<td>
						<h5>
							{{article.title}}
						</h5>
					</td>
					<td>
						<strong>
							{{article.price}}
						</strong>
					</td>
				</tr>

			{% endfor %}

			<tr>
				<td></td>
				<td></td>
				<td>
					<strong>{{receipts}}</strong>
				</td>
			</tr>

		</table>
	</div>
{% endblock %}
