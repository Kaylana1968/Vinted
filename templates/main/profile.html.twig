{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1.5em auto;
			max-width: 700px;
			width: 90%;
			font-family: 'Arial', sans-serif;
			color: #333;
			background: #f8f9fa;
			padding: 20px;
			border-radius: 8px;
			box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
			text-align: center; /* Centrage du contenu */
		}

		.example-wrapper h1 {
			font-size: 28px;
			margin-bottom: 10px;
			color: #007bff;
		}

		.example-wrapper h6 {
			font-size: 16px;
			margin-bottom: 20px;
			color: #6c757d;
		}

		.example-wrapper img {
			width: 150px;
			height: 150px;
			border-radius: 50%; /* Cercle pour l'image de profil */
			object-fit: cover;
			margin-bottom: 20px;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
		}

		/* Style des boutons */
		.example-wrapper li {
			list-style: none; /* Suppression des puces */
			margin-bottom: 10px;
		}

		.example-wrapper li a {
			display: inline-block;
			padding: 10px 20px;
			font-size: 16px;
			color: white;
			background-color: #007bff;
			border-radius: 6px;
			text-decoration: none;
			transition: background-color 0.3s ease-in-out;
		}

		/* Effet au survol */
		.example-wrapper li a:hover {
			background-color: #0056b3; /* Changement de couleur au survol */
		}

		/* Espacement entre les boutons */
		.buttons {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 10px;
		}

	</style>

	<div class="example-wrapper">
		<h1>Profile of {{ user.name }}</h1>
		<h6>{{ user.email }}</h6>

		<img src="{{ user.profilePicture }}" alt="{{ user.name }}'s profile picture">

		<div class="buttons">
			<li>
				<a href="{{ path('favorite') }}">Favorite</a>
			</li>
			<li>
				<a href="{{ path('buyed') }}">Buyed</a>
			</li>
			<li>
				<a href="{{ path('my_product') }}">My Product</a>
			</li>
			<li>
				<a href="{{ path('receipts') }}">Receipts</a>
			</li>
		</div>
	</div>
{% endblock %}
