{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Profile of
			{{ user.name }}</h1>
		<h6>{{ user.email }}</h6>

		<img src="{{ user.profilePicture }}">
		<li>
			<a href={{ path('favorite') }}>
				Favorite
			</a>
		</li>
		<li>
			<a href={{ path('buyed') }}>
				Buyed
			</a>
		</li>
		<li>
			<a href={{ path('my_product') }}>
				My Product
			</a>
		</li>
		<li>
			<a href={{ path('receipts') }}>
				Receipts
			</a>
		</li>
	</div>
{% endblock %}
