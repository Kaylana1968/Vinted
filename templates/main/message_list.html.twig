{% extends 'base.html.twig' %}

{% block title %}Message
{% endblock %}

{% block body %}
	<style>
		.container {
			border: 2px solid #bdc3c7;
			border-radius: 8px;
			padding: 10px 15px;
			margin: 1em 0;
			background-color: #f9f9f9;
			transition: background-color 0.3s;
		}
		.container:hover {
			background-color: #e7f3fe;
		}
		.container a {
			text-decoration: none;
			color: #34495e;
			font-weight: bold;
		}
	</style>

	{% for user in messaged_user %}
		<div class="container">
			<a href={{ path('messageCategory', {'receiverId': user.id} ) }}>
				<div>{{user.name}}</div>
			</a>
		</div>

	{% endfor %}

{% endblock %}
