{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .sender{margin: 10em; margin-top: 5em; margin-bottom: 1em;}
    .content{margin: 2em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .receiver{text-align: right; margin: 10em; margin-top: 1em; margin-bottom: 1em;}
    .container-2{margin: 10em; margin-top: 0; margin-bottom: 0; border: 3px solid black; border-radius: 10px;}
    .container{ margin-top: 1em; margin-bottom: 1em;}
</style>

<div class="example-wrapper">
    {% for message in all_message %}
    <div class="container">
        <div class="sender">{{message.sender.name}}</div>
         <div class="container-2">
        <div class="content">{{message.content}}</div>
        </div>
        <div class="receiver">{{message.receiver.name}}</div>
    </div>
    {% endfor %}
</div>
{% endblock %}
